---
import Layout from '../layouts/Layout.astro';
export const prerender = true;
---

<Layout title="Contact — Julie Wright Land Company" description="Get in touch with Julie Wright Land Company. Schedule a free consultation about your land needs.">
  <!-- Page Header -->
  <section class="relative py-20 lg:py-28 bg-earth-900 overflow-hidden">
    <svg class="absolute inset-0 w-full h-full opacity-[0.05]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 400" preserveAspectRatio="none">
      {[...Array(15)].map((_, i) => (
        <ellipse cx={600} cy={200} rx={80 + i * 40} ry={30 + i * 15} fill="none" stroke="white" stroke-width="0.6" />
      ))}
    </svg>
    <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
      <p class="section-label !text-copper-400">Reach Out</p>
      <h1 class="font-display text-4xl md:text-6xl text-earth-50 leading-tight mt-3">
        Get In <span class="italic text-forest-300">Touch</span>
      </h1>
      <p class="text-earth-400 mt-5 max-w-2xl text-lg">
        Whether you're buying, selling, or just exploring options — we're here to help.
      </p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="py-20 lg:py-28">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-5 gap-16">
        <!-- Contact Form -->
        <div class="lg:col-span-3">
          <h2 class="font-display text-2xl text-earth-900 mb-2">Schedule a Free Consultation</h2>
          <p class="text-earth-600 mb-8">Fill out the form below and we'll get back to you within one business day.</p>

          <form class="space-y-6" id="contact-form">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-earth-700 mb-2">First Name *</label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full px-4 py-3 bg-white border border-earth-200 rounded-sm text-earth-900 placeholder-earth-400 focus:outline-none focus:border-forest-600 focus:ring-1 focus:ring-forest-600 transition-colors"
                  placeholder="Your first name"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-earth-700 mb-2">Last Name *</label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full px-4 py-3 bg-white border border-earth-200 rounded-sm text-earth-900 placeholder-earth-400 focus:outline-none focus:border-forest-600 focus:ring-1 focus:ring-forest-600 transition-colors"
                  placeholder="Your last name"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-earth-700 mb-2">Email Address *</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-white border border-earth-200 rounded-sm text-earth-900 placeholder-earth-400 focus:outline-none focus:border-forest-600 focus:ring-1 focus:ring-forest-600 transition-colors"
                placeholder="you@example.com"
              />
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
              <div class="sm:col-span-2">
                <label for="city" class="block text-sm font-medium text-earth-700 mb-2">City</label>
                <input
                  type="text"
                  id="city"
                  name="city"
                  class="w-full px-4 py-3 bg-white border border-earth-200 rounded-sm text-earth-900 placeholder-earth-400 focus:outline-none focus:border-forest-600 focus:ring-1 focus:ring-forest-600 transition-colors"
                  placeholder="Your city"
                />
              </div>
              <div>
                <label for="state" class="block text-sm font-medium text-earth-700 mb-2">State</label>
                <input
                  type="text"
                  id="state"
                  name="state"
                  class="w-full px-4 py-3 bg-white border border-earth-200 rounded-sm text-earth-900 placeholder-earth-400 focus:outline-none focus:border-forest-600 focus:ring-1 focus:ring-forest-600 transition-colors"
                  placeholder="NC"
                />
              </div>
            </div>

            <div>
              <label for="landSize" class="block text-sm font-medium text-earth-700 mb-2">Land Size of Interest</label>
              <input
                type="text"
                id="landSize"
                name="landSize"
                class="w-full px-4 py-3 bg-white border border-earth-200 rounded-sm text-earth-900 placeholder-earth-400 focus:outline-none focus:border-forest-600 focus:ring-1 focus:ring-forest-600 transition-colors"
                placeholder="e.g., 5-10 acres"
              />
            </div>

            <div>
              <label for="comments" class="block text-sm font-medium text-earth-700 mb-2">Comments</label>
              <textarea
                id="comments"
                name="comments"
                rows="5"
                class="w-full px-4 py-3 bg-white border border-earth-200 rounded-sm text-earth-900 placeholder-earth-400 focus:outline-none focus:border-forest-600 focus:ring-1 focus:ring-forest-600 transition-colors resize-none"
                placeholder="Tell us about what you're looking for..."
              ></textarea>
            </div>

            <button type="submit" class="btn-primary w-full sm:w-auto">
              Send Message
              <svg class="w-4 h-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </button>
          </form>
        </div>

        <!-- Contact Info Sidebar -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Office -->
          <div class="bg-earth-100/60 border border-earth-200 rounded-sm p-7">
            <h3 class="font-display text-lg text-earth-900 mb-4">Office</h3>
            <address class="not-italic space-y-4 text-earth-600">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-forest-700 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>
                <div>
                  <p class="font-medium text-earth-800">Julie Wright Land Company</p>
                  <p>10931 Strickland Rd, Suite 111</p>
                  <p>Raleigh, NC 27615</p>
                </div>
              </div>
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-forest-700 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
                <a href="tel:9198475731" class="hover:text-forest-700 transition-colors">(919) 847-5731</a>
              </div>
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-forest-700 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
                <span>Fax: (919) 847-7182</span>
              </div>
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-forest-700 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
                <a href="mailto:juliannawright@gmail.com" class="hover:text-forest-700 transition-colors">juliannawright@gmail.com</a>
              </div>
            </address>
          </div>

          <!-- Service Area -->
          <div class="bg-earth-100/60 border border-earth-200 rounded-sm p-7">
            <h3 class="font-display text-lg text-earth-900 mb-4">Service Area</h3>
            <p class="text-sm text-earth-600 mb-4">We serve the following counties across the Triangle region:</p>
            <div class="flex flex-wrap gap-2">
              {['Wake', 'Durham', 'Granville', 'Franklin', 'Vance', 'Harnett', 'Nash', 'Chatham'].map((county) => (
                <span class="px-3 py-1.5 bg-white border border-earth-200 text-xs font-medium text-earth-700 rounded-sm">{county}</span>
              ))}
            </div>
          </div>

          <!-- Join Mailing List -->
          <div class="bg-forest-800 rounded-sm p-7">
            <h3 class="font-display text-lg text-earth-50 mb-2">Join Our Mailing List</h3>
            <p class="text-sm text-forest-200 mb-5">Stay updated on new listings and land opportunities across the Triangle.</p>
            <form class="flex gap-2">
              <input
                type="email"
                placeholder="Your email"
                class="flex-1 px-4 py-2.5 bg-white/10 border border-white/20 rounded-sm text-white placeholder-white/50 text-sm focus:outline-none focus:border-white/40"
              />
              <button type="submit" class="px-5 py-2.5 bg-white text-forest-800 text-sm font-semibold rounded-sm hover:bg-earth-100 transition-colors">
                Join
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
