---
import Layout from '../layouts/Layout.astro';
import ListingCard from '../components/ListingCard.astro';
import { featuredListings } from '../data/listings';
import { testimonials } from '../data/testimonials';
import { services } from '../data/services';
export const prerender = true;
---

<Layout title="Julie Wright Land Company — Finding The Homeplace">

  <!-- ═══════════════════════════════════════════
       HERO
  ════════════════════════════════════════════════ -->
  <section class="relative py-20 lg:py-24 bg-earth-900 overflow-hidden">
    <img
      src="/FallsLakeTopoContours.svg"
      class="topo-bg opacity-[0.045]"
      style="filter: invert(1);"
      alt="" aria-hidden="true"
    />
    <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
      <div class="flex flex-col lg:flex-row lg:items-center gap-12 lg:gap-16">

        <!-- LEFT: brand lockup -->
        <div class="flex flex-col items-center lg:flex-shrink-0 animate-fade-up" style="animation-delay:100ms">
          <p class="section-label !text-brand-light mb-6 text-center">
            Est. 1984 &middot; Raleigh, North Carolina
          </p>
          <div class="h-36 md:h-44" style="aspect-ratio:254.92/122.12;background-color:var(--color-light-text);-webkit-mask-image:url('/JWLC_1C.svg');mask-image:url('/JWLC_1C.svg');-webkit-mask-size:contain;mask-size:contain;-webkit-mask-repeat:no-repeat;mask-repeat:no-repeat;" role="img" aria-label="Julie Wright Land Company"></div>
          <div class="grid grid-cols-4 gap-5 mt-6 pt-6 border-t border-earth-700/60">
            {[
              { number: '40+',   label: 'Years'    },
              { number: '8',     label: 'Counties' },
              { number: '5',     label: 'Brokers'  },
              { number: '1000s', label: 'Acres'    },
            ].map((stat) => (
              <div>
                <p class="font-display text-xl text-light-text">{stat.number}</p>
                <p class="text-[9px] uppercase tracking-widest text-earth-500 mt-0.5">{stat.label}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Divider -->
        <div class="hidden lg:block w-px self-stretch bg-earth-700/60 flex-shrink-0"></div>

        <!-- RIGHT: headline + copy + CTAs -->
        <div class="animate-fade-up" style="animation-delay:250ms">
          <h1 class="font-display text-4xl md:text-5xl lg:text-6xl text-light-text leading-[1.05]">
            Finding The <span class="italic text-brand-light">Homeplace</span>
          </h1>
          <p class="text-earth-300 text-lg leading-relaxed mt-5 max-w-lg">
            Over 40 years of Triangle-area land brokerage across Wake, Durham, Granville, Franklin, and beyond.
          </p>
          <div class="flex flex-wrap gap-3 mt-8">
            <a href="/listings" class="btn-primary">Browse Listings</a>
            <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 border border-earth-500 text-earth-200 text-sm font-medium tracking-wide rounded-sm transition-all duration-300 hover:bg-earth-200 hover:text-earth-900">
              Contact Us
            </a>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- ═══════════════════════════════════════════
       FEATURED LISTINGS
  ════════════════════════════════════════════════ -->
  <section class="py-16 lg:py-20 bg-brand-bg">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="flex items-end justify-between mb-8">
        <div>
          <p class="section-label">Featured Properties</p>
          <h2 class="font-display text-3xl text-earth-900">Current Listings</h2>
        </div>
        <a href="/listings" class="btn-secondary text-sm">
          View All
          <svg class="w-4 h-4 ml-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {featuredListings.slice(0, 3).map((listing, i) => (
          <ListingCard listing={listing} index={i} />
        ))}
      </div>
    </div>
  </section>

  <!-- ═══════════════════════════════════════════
       ABOUT + SERVICES
  ════════════════════════════════════════════════ -->
  <section class="py-12 lg:py-16 bg-brand-bg">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-12 gap-10 lg:gap-14">

        <!-- About -->
        <div class="lg:col-span-4 border-l-2 border-crimson-700 pl-5">
          <p class="section-label">About the Company</p>
          <h2 class="font-display text-3xl text-earth-900 leading-tight">
            Rooted in the<br />
            <span class="italic text-crimson-700">Triangle</span> since 1984
          </h2>
          <p class="text-earth-600 leading-relaxed mt-3">
            We help buyers, sellers, and investors navigate land — soil, topography, zoning, tax, and estate — with deep local knowledge built over four decades across 8 counties.
          </p>
          <a href="/about" class="inline-flex items-center gap-1.5 text-sm font-semibold text-crimson-700 hover:text-crimson-900 mt-3 transition-colors">
            Meet Our Team
            <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        <!-- Services -->
        <div class="lg:col-span-8">
          <p class="section-label">What We Do</p>
          <div class="grid grid-cols-2 sm:grid-cols-3 gap-x-4 gap-y-6">
            {services.map((service) => (
              <div>
                <div class="aspect-[2/1] overflow-hidden rounded-sm mb-2.5">
                  <img
                    src={service.photo}
                    alt={service.title}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                </div>
                <p class="text-xs font-semibold text-earth-800 leading-snug">{service.title}</p>
              </div>
            ))}
          </div>
          <a href="/services" class="inline-flex items-center gap-1.5 text-sm font-semibold text-crimson-700 hover:text-crimson-900 mt-3 transition-colors">
            All Services
            <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

      </div>
    </div>
  </section>

  <!-- ═══════════════════════════════════════════
       TESTIMONIAL + CTA
  ════════════════════════════════════════════════ -->
  <section class="relative py-14 bg-earth-900 overflow-hidden">
    <img
      src="/FallsLakeTopoContours.svg"
      class="topo-bg opacity-[0.035]"
      style="filter: invert(1);"
      alt="" aria-hidden="true"
    />
    <div class="relative max-w-6xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">

        <!-- Testimonial -->
        <div>
          <svg class="w-7 h-7 text-light-text/30 mb-3" viewBox="0 0 24 24" fill="currentColor">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10H14.017zM0 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10H0z" />
          </svg>
          <blockquote class="font-display text-xl lg:text-2xl text-earth-100 italic leading-relaxed">
            "{testimonials[0].quote}"
          </blockquote>
          <footer class="mt-4">
            <cite class="not-italic text-sm text-earth-400 font-semibold">— {testimonials[0].author}</cite>
          </footer>
          <a href="/testimonials" class="inline-flex items-center gap-1.5 text-sm text-earth-400 hover:text-light-text mt-4 transition-colors font-medium">
            Read more testimonials
            <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        <!-- CTA -->
        <div class="lg:border-l lg:border-earth-700 lg:pl-14">
          <h2 class="font-display text-3xl lg:text-4xl text-light-text leading-tight">
            Ready to Find Your<br />
            <span class="italic text-brand-light">Perfect Piece of Land?</span>
          </h2>
          <p class="text-earth-400 text-sm mt-4 leading-relaxed">
            Whether you're buying, selling, or investing — our team has the local knowledge to guide you every step of the way.
          </p>
          <div class="flex flex-wrap gap-3 mt-7">
            <a href="/contact" class="btn-primary">Schedule a Free Consultation</a>
            <a href="tel:9198475731" class="inline-flex items-center justify-center px-6 py-3 border border-earth-600 text-earth-300 text-sm font-medium tracking-wide rounded-sm transition-all duration-300 hover:bg-earth-300 hover:text-earth-900">
              (919) 847-5731
            </a>
          </div>
        </div>

      </div>
    </div>
  </section>

</Layout>
